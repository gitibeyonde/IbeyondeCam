<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Theme.IbeyondeCam.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="LinkStyle">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="LinkButtonStyle">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">12dp</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">12dp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:insetBottom">12dp</item>
    </style>


    <style name="TimestampStyle">
        <item name="android:fontFamily">serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="UUIDStyle">
        <item name="android:fontFamily">serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
    </style>


    <style name="SettingsStyle">
        <item name="android:fontFamily">serif</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:insetBottom">12dp</item>
    </style>
</resources>